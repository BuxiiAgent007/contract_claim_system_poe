@{
    Layout = "_Layout";
}
<h2>Debug Claims</h2>

<h3>All Claims in Database:</h3>
@if (ViewBag.AllClaims != null && ViewBag.AllClaims.Count > 0)
{
    <table class="table">
        <tr><th>ID</th><th>LecturerID</th><th>Module</th><th>Status</th><th>Date</th></tr>
        @foreach (var claim in ViewBag.AllClaims)
        {
            <tr>
                <td>@claim.claimID</td>
                <td>@claim.lecturerID</td>
                <td>@claim.module_name</td>
                <td>@claim.claim_status</td>
                <td>@claim.creating_date</td>
            </tr>
        }
    </table>
}
else
{
    <p>No claims in database</p>
}

<h3>Claims for Lecturer ID 1:</h3>
@if (ViewBag.Lecturer1Claims != null && ViewBag.Lecturer1Claims.Count > 0)
{
    <table class="table">
        <tr><th>ID</th><th>LecturerID</th><th>Module</th><th>Status</th><th>Date</th></tr>
        @foreach (var claim in ViewBag.Lecturer1Claims)
        {
            <tr>
                <td>@claim.claimID</td>
                <td>@claim.lecturerID</td>
                <td>@claim.module_name</td>
                <td>@claim.claim_status</td>
                <td>@claim.creating_date</td>
            </tr>
        }
    </table>
}
else
{
    <p class="text-danger">No claims found for Lecturer ID 1!</p>
}

<a href="/Claims/MyClaims?lecturerID=1" class="btn btn-primary">Back to My Claims</a>