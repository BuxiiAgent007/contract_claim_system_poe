@{
    Layout = "_Layout";
    ViewData["Title"] = "Enter Your Lecturer ID";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0"><i class="bi bi-person"></i> View My Claims</h4>
            </div>
            <div class="card-body">
                <p class="text-muted">Please enter your Lecturer ID to view your claims.</p>

                <form method="get" asp-action="MyClaims">
                    <div class="mb-3">
                        <label for="lecturerID" class="form-label">Lecturer ID</label>
                        <input type="number" class="form-control" id="lecturerID" name="lecturerID"
                               required min="1" placeholder="Enter your lecturer ID">
                    </div>
                    <button type="submit" class="btn btn-primary">View My Claims</button>
                    <a href="/Claims/AllClaims" class="btn btn-secondary">View All Claims</a>
                </form>
            </div>
        </div>
    </div>
</div>