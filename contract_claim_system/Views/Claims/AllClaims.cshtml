@model IEnumerable<contract_claim_system.Models.Claim>
@{
    Layout = "_Layout";
    ViewData["Title"] = "All Claims";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-list-check text-primary"></i> All Claims</h2>
    <div>
        <a href="/Claims/Submit" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> New Claim
        </a>
        <a href="/Claims/Pending" class="btn btn-warning">
            <i class="bi bi-clock"></i> Pending Claims
        </a>
    </div>
</div>

<!-- Filter Form -->
<form method="get" class="mb-4">
    <div class="row">
        <div class="col-md-6">
            <div class="input-group">
                <input type="text" name="lecturerIdOrName" class="form-control" placeholder="Filter by lecturer ID" />
                <button class="btn btn-outline-secondary" type="submit">
                    <i class="bi bi-filter"></i> Filter
                </button>
            </div>
        </div>
    </div>
</form>

<!-- Alert Messages -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        <h5>No Claims Found</h5>
        <p>There are no claims in the system yet.</p>
        <a href="/Claims/Submit" class="btn btn-primary">Submit Your First Claim</a>
    </div>
}
else
{
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Lecturer ID</th>
                            <th>Module</th>
                            <th>Faculty</th>
                            <th>Hours</th>
                            <th>Rate</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th>Submitted</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var claim in Model)
                        {
                            <tr>
                                <td><strong>#@claim.claimID</strong></td>
                                <td>@claim.lecturerID</td>
                                <td>@claim.module_name</td>
                                <td>@claim.faculty_name</td>
                                <td>@claim.number_of_hours</td>
                                <td>R @claim.amount_of_rate</td>
                                <td><strong>R @(claim.number_of_hours* claim.amount_of_rate)</strong></td>
                                <td>
                                    <span class="badge bg-@(claim.claim_status == "Approved" ? "success" : claim.claim_status == "Rejected" ? "danger" : "warning")">
                                        @claim.claim_status
                                    </span>
                                </td>
                                <td>@claim.creating_date.ToString("MMM dd, yyyy")</td>
                                <td>
                                    <a href="/Claims/Details/@claim.claimID" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                    @if (claim.claim_status == "Pending")
                                    {
                                        <form method="post" asp-action="UpdateStatus" style="display:inline;">
                                            <input type="hidden" name="id" value="@claim.claimID" />
                                            <input type="hidden" name="status" value="Approved" />
                                            <button class="btn btn-sm btn-success" type="submit" title="Approve">
                                                <i class="bi bi-check-lg"></i>
                                            </button>
                                        </form>
                                        <form method="post" asp-action="UpdateStatus" style="display:inline;">
                                            <input type="hidden" name="id" value="@claim.claimID" />
                                            <input type="hidden" name="status" value="Rejected" />
                                            <button class="btn btn-sm btn-danger" type="submit" title="Reject">
                                                <i class="bi bi-x-lg"></i>
                                            </button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-3 text-muted">
        <small>Showing @Model.Count() claims</small>
    </div>
}