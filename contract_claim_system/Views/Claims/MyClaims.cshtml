@model IEnumerable<contract_claim_system.Models.Claim>
@{
    Layout = "_Layout";
    ViewData["Title"] = "My Claims";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-person text-primary"></i> My Claims</h2>
    <div>
        <a href="/Claims/Submit" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> New Claim
        </a>
        <a href="/Claims/AllClaims" class="btn btn-outline-secondary">
            <i class="bi bi-list-check"></i> All Claims
        </a>
    </div>
</div>

@if (ViewBag.LecturerID != null)
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> Showing claims for Lecturer ID: <strong>@ViewBag.LecturerID</strong>
    </div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (!Model.Any())
{
    <div class="alert alert-warning text-center py-5">
        <i class="bi bi-inbox" style="font-size: 3rem;"></i>
        <h4 class="mt-3">No Claims Found</h4>
        <p>You haven't submitted any claims yet.</p>
        <a href="/Claims/Submit" class="btn btn-primary">Submit Your First Claim</a>
    </div>
}
else
{
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Module</th>
                            <th>Faculty</th>
                            <th>Sessions</th>
                            <th>Hours</th>
                            <th>Rate</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th>Submitted</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var claim in Model)
                        {
                            <tr>
                                <td><strong>#@claim.claimID</strong></td>
                                <td>@claim.module_name</td>
                                <td>@claim.faculty_name</td>
                                <td>@claim.number_of_sessions</td>
                                <td>@claim.number_of_hours</td>
                                <td>R @claim.amount_of_rate</td>
                                <td><strong>R @(claim.number_of_hours* claim.amount_of_rate)</strong></td>
                                <td>
                                    <span class="badge bg-@(claim.claim_status == "Approved" ? "success" : claim.claim_status == "Rejected" ? "danger" : "warning")">
                                        @claim.claim_status
                                    </span>
                                </td>
                                <td>@claim.creating_date.ToString("MMM dd, yyyy")</td>
                                <td>
                                    <a href="/Claims/Details/@claim.claimID" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-3 text-muted">
        <small>Showing @Model.Count() claims for Lecturer ID: @ViewBag.LecturerID</small>
    </div>
}