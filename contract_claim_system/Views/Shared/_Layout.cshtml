<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Contract Claim System - @ViewData["Title"]</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <style>
        .navbar-brand {
            font-weight: 600;
        }

        .sidebar {
            background-color: #f8f9fa;
            min-height: calc(100vh - 56px);
            box-shadow: inset -1px 0 0 rgba(0, 0, 0, .1);
        }

            .sidebar .nav-link {
                color: #333;
                padding: 0.75rem 1rem;
                border-radius: 0.375rem;
                margin: 0.125rem 0.5rem;
            }

                .sidebar .nav-link:hover {
                    background-color: #e9ecef;
                }

                .sidebar .nav-link.active {
                    background-color: #0d6efd;
                    color: white;
                }

                .sidebar .nav-link i {
                    margin-right: 0.5rem;
                    width: 1.25rem;
                    text-align: center;
                }

        .main-content {
            padding: 2rem;
        }

        .stat-card {
            transition: transform 0.2s;
        }

            .stat-card:hover {
                transform: translateY(-2px);
            }

        .badge {
            font-size: 0.7em;
        }

        /* Home page specific styling */
        .welcome-hero {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 4rem 0;
            border-radius: 0.5rem;
            margin-bottom: 2rem;
        }

        .feature-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border: none;
        }

            .feature-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 25px rgba(0,0,0,0.15);
            }

        .quick-stats {
            background: #f8f9fa;
            border-radius: 0.5rem;
            padding: 1.5rem;
        }

        /* Button enhancements */
        .btn {
            border-radius: 0.375rem;
            font-weight: 500;
            padding: 0.5rem 1.5rem;
        }
    </style>
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <i class="bi bi-file-earmark-text"></i> Contract Claim System
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">
                            <i class="bi bi-house"></i> Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Claims/Submit">
                            <i class="bi bi-plus-circle"></i> Submit Claim
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Claims/AllClaims">
                            <i class="bi bi-list-check"></i> All Claims
                        </a>
                    </li>
                </ul>

                <!-- Admin Dropdown -->
                <ul class="navbar-nav">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle"></i> @User.Identity.Name
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <a class="dropdown-item" href="/Account/Profile">
                                        <i class="bi bi-person"></i> My Profile
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>

                                @if (User.IsInRole("Admin") || User.IsInRole("Coordinator") || User.IsInRole("Manager") || User.IsInRole("HR"))
                                {
                                    <li>
                                        <a class="dropdown-item" href="/Admin/Dashboard">
                                            <i class="bi bi-speedometer2"></i> Admin Dashboard
                                        </a>
                                    </li>
                                }

                                @if (User.IsInRole("Coordinator") || User.IsInRole("Admin"))
                                {
                                    <li>
                                        <a class="dropdown-item" href="/Review/CoordinatorDashboard">
                                            <i class="bi bi-clipboard-check"></i> Coordinator Review
                                        </a>
                                    </li>
                                }

                                @if (User.IsInRole("Manager") || User.IsInRole("Admin"))
                                {
                                    <li>
                                        <a class="dropdown-item" href="/Review/ManagerDashboard">
                                            <i class="bi bi-clipboard-data"></i> Manager Review
                                        </a>
                                    </li>
                                }

                                @if (User.IsInRole("HR") || User.IsInRole("Admin"))
                                {
                                    <li>
                                        <a class="dropdown-item" href="/HR/Dashboard">
                                            <i class="bi bi-person-badge"></i> HR Dashboard
                                        </a>
                                    </li>
                                }

                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form method="post" asp-action="Logout" asp-controller="Account" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="dropdown-item">
                                            <i class="bi bi-box-arrow-right"></i> Logout
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Login">
                                <i class="bi bi-box-arrow-in-right"></i> Login
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Register">
                                <i class="bi bi-person-plus"></i> Register
                            </a>
                        </li>
                    }
                </ul>
                    </li>
                </ul>

                <li>
                    <a class="dropdown-item" href="/Review/CoordinatorDashboard">
                        <i class="bi bi-clipboard-check"></i> Coordinator Review
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" href="/Review/ManagerDashboard">
                        <i class="bi bi-clipboard-data"></i> Manager Review
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" href="/HR/Dashboard">
                        <i class="bi bi-person-badge"></i> HR Dashboard
                    </a>
                </li>

            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 col-lg-2 d-md-block sidebar collapse">
                <div class="position-sticky pt-3">
                    <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted text-uppercase">
                        <span>Quick Actions</span>
                    </h6>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" href="/Claims/Submit">
                                <i class="bi bi-plus-circle"></i> New Claim
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Claims/MyClaims?lecturerID=1">
                                <!-- Change 1 to actual lecturer ID -->
                                <i class="bi bi-person"></i> My Claims
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Claims/Pending">
                                <i class="bi bi-clock"></i> Pending Review
                            </a>
                        </li>
                    </ul>

                    <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted text-uppercase">
                        <span>Reports</span>
                    </h6>
                    <ul class="nav flex-column mb-2">
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/Financials">
                                <i class="bi bi-graph-up"></i> Financial Overview
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Claims/AllClaims">
                                <i class="bi bi-list-ul"></i> All Claims
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Main Content Area -->
            <main class="col-md-9 ms-sm-auto col-lg-10 main-content">
                <!-- Alert Messages -->
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Error"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                @if (TempData["Info"] != null)
                {
                    <div class="alert alert-info alert-dismissible fade show" role="alert">
                        <i class="bi bi-info-circle-fill"></i> @TempData["Info"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <!-- Page Content -->
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Footer -->
    <footer class="border-top footer text-muted mt-5">
        <div class="container text-center py-3">
            &copy; 2024 - Contract Claim System -
            <a href="/Admin/Dashboard" class="text-decoration-none">Admin Portal</a>
        </div>
    </footer>

    <!-- Bootstrap & JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

    @if (User.IsInRole("Coordinator") || User.IsInRole("Admin"))
    {
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="coordinatorDropdown" role="button"
               data-bs-toggle="dropdown" aria-expanded="false">
                <i class="bi bi-clipboard-check"></i> Coordinator
            </a>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="/Coordinator/Dashboard"><i class="bi bi-speedometer2"></i> Dashboard</a></li>
                <li><a class="dropdown-item" href="/Coordinator/VerifyClaims"><i class="bi bi-clipboard-check"></i> Verify Claims</a></li>
            </ul>
        </li>
    }

</body>
</html>