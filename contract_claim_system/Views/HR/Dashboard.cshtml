@model contract_claim_system.Controllers.HRDashboardStats
@{
    Layout = "_Layout";
    ViewData["Title"] = "HR Dashboard";
}

<h2><i class="bi bi-person-badge text-success"></i> HR Dashboard</h2>

<div class="row mb-4">
    <div class="col-md-6">
        <div class="card text-white bg-success mb-3">
            <div class="card-body">
                <h5 class="card-title">Approved Claims Ready for Payment</h5>
                <h2>@Model.ApprovedClaimsCount</h2>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card text-white bg-info mb-3">
            <div class="card-body">
                <h5 class="card-title">Total Payment Amount</h5>
                <h2>R @Model.TotalApprovedAmount.ToString("N2")</h2>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5>Recently Approved Claims</h5>
            </div>
            <div class="card-body">
                @if (Model.RecentApprovedClaims.Any())
                {
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Claim ID</th>
                                <th>Lecturer</th>
                                <th>Module</th>
                                <th>Amount</th>
                                <th>Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model.RecentApprovedClaims)
                            {
                                <tr>
                                    <td>#@claim.ClaimID</td>
                                    <td>@claim.LecturerName</td>
                                    <td>@claim.Module</td>
                                    <td>R @claim.Amount</td>
                                    <td>@claim.Date.ToString("MMM dd, yyyy")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-muted">No approved claims ready for payment.</p>
                }
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="/HR/GeneratePaymentReport?period=weekly" class="btn btn-primary">
                        <i class="bi bi-download"></i> Weekly Payment Report
                    </a>
                    <a href="/HR/GeneratePaymentReport?period=monthly" class="btn btn-secondary">
                        <i class="bi bi-download"></i> Monthly Payment Report
                    </a>
                    <a href="/HR/ManageLecturers" class="btn btn-info">
                        <i class="bi bi-people"></i> Manage Lecturers
                    </a>
                    <a href="/Claims/AllClaims" class="btn btn-outline-primary">
                        <i class="bi bi-list-check"></i> View All Claims
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>