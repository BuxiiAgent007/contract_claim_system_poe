@model contract_claim_system.Controllers.FinancialOverview
@{
    Layout = "_Layout";
    ViewBag.Title = "Financial Overview";
}

<h2>Financial Overview</h2>

<div class="row">
    <div class="col-md-4">
        <div class="card text-white bg-success mb-3">
            <div class="card-body">
                <h5 class="card-title">Total Approved Amount</h5>
                <h2>R @Model.TotalApprovedAmount.ToString("N2")</h2>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Amount by Faculty</h5>
            </div>
            <div class="card-body">
                <table class="table table-sm">
                    <thead>
                        <tr><th>Faculty</th><th>Amount</th></tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.AmountByFaculty)
                        {
                            <tr>
                                <td>@item.Key</td>
                                <td>R @item.Value.ToString("N2")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Monthly Breakdown</h5>
            </div>
            <div class="card-body">
                <table class="table table-sm">
                    <thead>
                        <tr><th>Month</th><th>Amount</th></tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.MonthlyBreakdown)
                        {
                            <tr>
                                <td>@item.Key</td>
                                <td>R @item.Value.ToString("N2")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>