@{
    Layout = "_Layout";
    ViewData["Title"] = "Access Denied";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0 text-center"><i class="bi bi-shield-exclamation"></i> Access Denied</h4>
            </div>
            <div class="card-body text-center">
                <div class="mb-4">
                    <i class="bi bi-shield-lock-fill text-danger" style="font-size: 4rem;"></i>
                </div>

                <h3 class="text-danger">Access Restricted</h3>
                <p class="text-muted mb-4">
                    You don't have permission to access this page.
                    Please contact your administrator if you believe this is an error.
                </p>

                <div class="d-grid gap-2">
                    <a href="/Account/Profile" class="btn btn-primary">
                        <i class="bi bi-person"></i> Go to My Profile
                    </a>
                    <a href="/Home/Index" class="btn btn-outline-secondary">
                        <i class="bi bi-house"></i> Back to Home
                    </a>
                    <form method="post" asp-action="Logout" asp-controller="Account" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-outline-danger">
                            <i class="bi bi-box-arrow-right"></i> Login with Different Account
                        </button>
                    </form>
                </div>

                <div class="mt-4">
                    <small class="text-muted">
                        Logged in as: <strong>@User.Identity.Name</strong><br>
                        Role: <strong>@User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value</strong>
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>